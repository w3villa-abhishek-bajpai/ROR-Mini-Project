<p class="alert alert-info"><%= notice %></p>

<div class="container mt-5 p-4 border rounded shadow bg-white">
  <h1 class="mb-4 text-center text-primary">Student Details</h1>

  <p><strong>Student ID:</strong> <%= @student.id %></p>
  <p><strong>Name:</strong> <%= @student.full_name %></p>
  <p><strong>Email:</strong> <%= @student.email %></p>

  <% if @student.date_of_birth.present? %>
      <p><strong>Date of Birth:</strong> <%= formatted_date(@student.date_of_birth) %></p>
  <% end %>
  <p><strong>Age: </strong><%= @student.age %></p>
  <p><strong>Local Address:</strong> <%= @student.local_address %></p>
  <p><strong>Permanent Address:</strong> <%= @student.permanent_address %></p>
  <p><strong>Permananent Contact Number :</strong> <%= @student.permanent_contact_number %></p>
  <p><strong>Alternate Contact Number   :</strong> <%= @student.alernate_contact_number %></p>
  
  <div class="mt-4 d-flex justify-content-between">
    <%= link_to 'Back', students_path, class: "btn btn-secondary" %> 
    <%= link_to 'Edit', edit_student_path(@student), class: "btn btn-warning" %>
  </div>
</div>
