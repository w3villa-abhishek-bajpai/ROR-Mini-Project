<div class="container mt-5">
  <% if notice.present? %>
    <div class="alert alert-success text-center fw-semibold">
      <%= notice %>
    </div>
  <% end %>

  <div class="card shadow p-4 mx-auto" style="max-width: 600px;">
    <%= render @course %>
  </div>

  <div class="d-flex justify-content-center gap-3 mt-4">
    <%= link_to " Edit this Course", edit_course_path(@course), class: "btn btn-outline-primary px-4" %>
    <%= link_to " Back to Courses", courses_path, class: "btn btn-outline-secondary px-4" %>
    <%= button_to " Destroy this Course", @course, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger px-4" %>
  </div>
</div>
