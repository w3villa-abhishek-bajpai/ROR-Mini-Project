<p class="alert alert-info"><%= notice %></p>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Listing Students</h1>
    <%= link_to 'Student Form', new_student_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
          <td><%= link_to 'View', student, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to "Delete", admin_student_path(student), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="6" class="text-end">Total Students: <%= @students.count %></th>
      </tr>
    </tfoot>
  </table>
</div>
