<div class="form-container min-vh-100 d-flex align-items-center justify-content-center">
  <%= form_with model: student, html: { class: "glass-form p-5 rounded-4 shadow-lg" } do |form| %>
    <% if @student.errors.any? %>
      <div class="alert alert-danger fade-in">
        <h4 class="alert-heading"> Please fix these errors:</h4>
        <ul class="mb-0">
          <% @student.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2 class="text-center mb-4 text-white">Student Registration Form</h2>

    <div class="row g-4">
      <!-- First Row -->
      <div class="col-md-6">
        <div class="form-floating">
          <%= form.text_field :first_name, class: "form-control input-hover", placeholder: "First Name" %>
      
          <i class="fas fa-user form-icon"></i>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-floating">
          <%= form.text_field :last_name, class: "form-control input-hover", placeholder: "Last Name" %>
   
          <i class="fas fa-users form-icon"></i>
        </div>
      </div>

      <!-- Second Row -->
      <div class="col-md-6">
        <div class="form-floating">
          <%= form.email_field :email, class: "form-control input-hover", placeholder: "Email" %>
        
          <i class="fas fa-envelope form-icon"></i>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-floating">
          <%= form.date_field :date_of_birth, class: "form-control input-hover" %>
        </div>
      </div>

      <!-- Address Fields -->
      <div class="col-12">
        <div class="form-floating">
          <%= form.text_field :local_address, class: "form-control input-hover", placeholder: "Local Address" %>
          <i class="fas fa-map-marker-alt form-icon"></i>
        </div>
      </div>

      <div class="col-12">
        <div class="form-floating">
          <%= form.text_field :permanent_address, class: "form-control input-hover", placeholder: "Permanent Address" %>
          <i class="fas fa-home form-icon"></i>
        </div>
      </div>

      <!-- Contact Fields -->
      <div class="col-md-6">
        <div class="form-floating">
          <%= form.text_field :permanent_contact_number, class: "form-control input-hover", placeholder: "Permanent Contact" %>
          <i class="fas fa-phone form-icon"></i>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-floating">
          <%= form.text_field :alternate_contact_number, class: "form-control input-hover", placeholder: "Alternate Contact" %>
          <i class="fas fa-mobile-alt form-icon"></i>
        </div>
      </div>

      <!-- Profile Image -->
      <div class="col-12">
        <div class="form-group">
          <label class="text-light mb-2">
            <i class="fas fa-camera me-2"></i>Profile Image
          </label>
          <%= form.file_field :profile_image, class: "form-control input-hover" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="col-12 text-center mt-4">
        <%= form.submit "Submit", class: "btn btn-primary btn-lg px-5 py-3 glow-on-hover" %>
      </div>
    </div>
  <% end %>
</div>

<style>
  .form-container {
    background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), 
                url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f') center/cover;
    font-family: 'Segoe UI', sans-serif;
  }

  .glass-form {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    width: 90%;
    max-width: 800px;
  }

  .form-floating {
    position: relative;
  }

  .form-icon {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.7);
    z-index: 2;
  }

  .input-hover {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white !important;
    transition: all 0.3s ease;
  }

  .input-hover:focus {
    background: rgba(255, 255, 255, 0.1);
    border-color: #80bdff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
  }

  .glow-on-hover {
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .glow-on-hover:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
  }

  .fade-in {
    animation: fadeIn 0.5s ease-in;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .form-control::placeholder {
    color: rgba(255, 255, 255, 0.6) !important;
  }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">