<div class="home-page max-vh-99 d-flex  flex-column">
  <!-- kground Image -->
  <div class="parallax-bg position-absolute  w-100 h-100"></div>

  <!-- Content -->
  <div class="content-wrapper position-relative flex-grow-1 d-flex flex-column">
    <!-- Hero Section -->
    <header class="hero text-center py-5 text-white">
      <div class="container">
        <h1 class="display-4 fw-bold mb-4 animate__animated animate__fadeInDown">
          Student Management System
        </h1>
        <p class="lead mb-5 opacity-75 animate__animated animate__fadeIn animate__delay-1s">
          Streamline student data management with intuitive controls and real-time insights
        </p>
      </div>
    </header>

    <!-- Action Cards -->
<main class="container flex-grow-1 py-4">
  <div class="row g-4 justify-content-center">
    <!-- Students Card -->
    <div class="col-md-6 col-lg-4 animate__animated animate__fadeInUp animate__delay-1s">
      <div class="card glass-card h-100">
        <div class="card-body text-center p-4">
          <i class="fas fa-users fa-3x text-primary mb-4"></i>
          <h3 class="h4 mb-3 text-white">Students</h3>
          <div class="d-grid gap-3">
            <%= link_to admin_students_path, class: "btn btn-light btn-hover" do %>
              <i class="fas fa-list me-2"></i>View All
            <% end %>
            <%= link_to new_admin_student_path, class: "btn btn-primary btn-hover" do %>
              <i class="fas fa-plus me-2"></i>Add New
            <% end %>
          </div>
        </div>
      </div>
    </div>

        <!-- Courses Card -->
    <div class="col-md-6 col-lg-4 animate__animated animate__fadeInUp animate__delay-1-2s">
      <div class="card glass-card h-100">
        <div class="card-body text-center p-4">
          <i class="fas fa-book-open fa-3x text-success mb-4"></i>
          <h3 class="h4 mb-3 text-white">Courses</h3>
          <div class="d-grid gap-3">
            <%= link_to courses_path, class: "btn btn-light btn-hover" do %>
              <i class="fas fa-list me-2"></i>View All
            <% end %>
            <%= link_to new_course_path, class: "btn btn-success btn-hover" do %>
              <i class="fas fa-plus me-2"></i>Add New
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Projects Card -->
    <div class="col-md-6 col-lg-4 animate__animated animate__fadeInUp animate__delay-1-4s">
      <div class="card glass-card h-100">
        <div class="card-body text-center p-4">
          <i class="fas fa-tasks fa-3x text-warning mb-4"></i>
          <h3 class="h4 mb-3 text-white">Projects</h3>
          <div class="d-grid gap-3">
            <%= link_to projects_path, class: "btn btn-light btn-hover" do %>
              <i class="fas fa-list me-2"></i>View All
            <% end %>
            <%= link_to new_project_path, class: "btn btn-warning btn-hover" do %>
              <i class="fas fa-plus me-2"></i>Add New
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
   
  </div>
</div>

<style>
  .parallax-bg {
    background-image: url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f');
    background-size: cover;
    background-position: center;
    filter: brightness(0.7);
    z-index: 0;

  }

  .glass-card {
    background: rgba(255, 255, 255, 0.1) !important;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
    transition: transform 0.3s ease;
  }

  .glass-card:hover {
    transform: translateY(-5px);
  }

  .btn-hover {
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-hover:hover {
    transform: scale(1.05);
  }
  p.notice {
  margin-bottom: 16px; 
}
</style>